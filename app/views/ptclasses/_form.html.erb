
<%= simple_form_for(@ptclass) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :dog_id %>
    <%= f.input :class_date %>
    <%= f.input :obs %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
