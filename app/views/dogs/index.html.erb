<p id="notice"><%= notice %></p>


<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Sexo</th>
      <th>Data de Nascimento</th>
      <th>Raça</th>
      <th>Cor</th>
      <th>Peso</th>
      <th>No. Chip</th>
      <th>Vaccines</th>
      <th>Canileish</th>
      <th>Alergias</th>
      <th>Observações</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.name %></td>
        <td><%= dog.sex %></td>
        <td><%= dog.dob %></td>
        <td><%= dog.breed %></td>
        <td><%= dog.color %></td>
        <td><%= dog.weight %></td>
        <td><%= dog.chip %></td>
        <td><%= dog.vaccines %></td>
        <td><%= dog.canil %></td>
        <td><%= dog.allergies %></td>
        <td><%= dog.obs %></td>
        <td><%= link_to dog, style:"color:white;" do %><i class="far fa-eye"></i><% end %></td>
        <td><%= link_to edit_dog_path(dog), style:"color:white;" do %><i class="fas fa-pencil-alt"></i><% end %></td>
        <td><%= link_to dog, style:"color:white;", method: :delete, data: { confirm: 'Are you sure?' } do %><i class="fas fa-trash-alt"></i><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'Adicionar cão', new_dog_path, class: "btn btn-primary font-weight-bold", style: "margin-left:5px;color:white;" %>
