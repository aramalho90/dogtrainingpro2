
<%= simple_form_for(@dog) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :sex %>
    <%= f.input :dob %>
    <%= f.input :breed %>
    <%= f.input :color %>
    <%= f.input :weight %>
    <%= f.input :chip %>
    <%= f.input :vaccines %>
    <%= f.input :canil %>
    <%= f.input :allergies %>
    <%= f.input :obs %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
