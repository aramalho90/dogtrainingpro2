
<%= simple_form_for(@pttrain) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :test1 %>
    <%= f.input :test2 %>
    <%= f.input :test3 %>
    <%= f.input :test4 %>
    <%= f.input :inscr_paid %>
    <%= f.input :status %>
    <%= f.input :obs %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
