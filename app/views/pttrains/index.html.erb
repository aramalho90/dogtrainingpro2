<br>
<%= search_form_for @q do |f| %>
  <%= f.label :dog_name_cont, 'Nome do cão' %>
  <%= f.search_field :dog_name_cont %>
  <%= f.label :ptmap_day_eq, 'Dia da semana' %>
  <%= f.select :ptmap_day_eq, [['Segunda-feira', 'Segunda-feira'], ['Terca-feira', 'Terca-feira'],
                                          ['Quarta-feira', 'Quarta-feira'],['Quinta-feira', 'Quinta-feira'],
                                          ['Sexta-feira', 'Sexta-feira']],{include_blank: ''}
                                                                                   %>

  <%= f.submit 'Filtrar' %>

<% end %>
<br>
<table class="table table-striped table-dark table-hover">
  <thead>
    <tr>
      <th>Nome do Cão</th>
      <th class="m1">Mês 1</th>
      <th class="m2">Mês 2</th>
      <th class="m3">Mês 3</th>
      <th class="m4">Mês 4</th>
      <th class="m5">Mês 5</th>
      <th class="m6">Mês 6</th>
    </tr>
  </thead>

  <tbody>
    <% @pttrains.each do |pttrain| %>
      <tr>
        <td><%= pttrain.name %></td>
        <td class="m1"><%= simple_form_for pttrain, method: :put do |f|%>
                       <%= f.input :mon1, label: false %>
                       <%= f.submit 'Alterar'%>
                   <%end%> </td>
        <td class="m2"><%= simple_form_for pttrain, method: :put do |f|%>
                       <%= f.input :mon2, label: false %>
                       <%= f.submit 'Alterar'%>
                   <%end%> </td>
        <td class="m3"><%= simple_form_for pttrain, method: :put do |f|%>
                       <%= f.input :mon3, label: false %>
                       <%= f.submit 'Alterar'%>
                   <%end%> </td>
        <td class="m4"><%= simple_form_for pttrain, method: :put do |f|%>
                       <%= f.input :mon4, label: false %>
                       <%= f.submit 'Alterar'%>
                   <%end%> </td>
        <td class="m5"><%= simple_form_for pttrain, method: :put do |f|%>
                       <%= f.input :mon5, label: false %>
                       <%= f.submit 'Alterar'%>
                   <%end%> </td>
        <td class="m6"><%= simple_form_for pttrain, method: :put do |f|%>
                       <%= f.input :mon6, label: false %>
                       <%= f.submit 'Alterar'%>
                   <%end%> </td>
                   </tr>
    <% end %>
  </tbody>
</table>